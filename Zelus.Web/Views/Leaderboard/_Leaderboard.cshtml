@model Zelus.Web.Models.LeaderboardVM

<div class="row">
    <div class="col-xs-12">
        <h3>
            @Model.RaidName<br />
            <small>@Model.RaidSubtext</small>
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Phase 1
            </div>
            <div class="panel-body">
                @foreach (var squad in Model.PhaseOneSquads)
                {
                    @Html.Partial("_Squad", squad)
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Phase 2
            </div>
            <div class="panel-body">
                @foreach (var squad in Model.PhaseTwoSquads)
                {
                    @Html.Partial("_Squad", squad)
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Phase 3
            </div>
            <div class="panel-body">
                @foreach (var squad in Model.PhaseThreeSquads)
                {
                    @Html.Partial("_Squad", squad)
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Phase 4
            </div>
            <div class="panel-body">
                @foreach (var squad in Model.PhaseFourSquads)
                {
                    @Html.Partial("_Squad", squad)
                }
            </div>
        </div>
    </div>
</div>