@using Z.Core.Extensions
@model List<Zelus.Web.Models.LeaderboardVM>
    
<style type="text/css">
    .clickable-row {
        cursor: pointer;
    }
    .squad-rank {
        font-size: 18px;
    }
    .btn-submit {
        margin: 20px 0 10px;
    }
</style>
    
@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('.clickable-row').click(function() {
                window.location = $(this).data("href");
                return false;
            });
        });
    </script>
}

<div class="row">
    <div class="col-sm-9">
        <h2>Raid Damage Leaderboard</h2>
    </div>
    <div class="col-sm-3 text-right-not-xs">
        <a href="@Url.Action("Index", "Squad")" class="btn btn-primary btn-submit"><i class="fa fa-users"></i> Submit a Squad</a>
    </div>
</div>

@foreach (var board in Model)
{
    @Html.Partial("_Leaderboard", board)
}